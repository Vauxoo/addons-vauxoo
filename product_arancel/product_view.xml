<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>
		
		<record model='ir.ui.view' id='product_arancel_form_view'>
			<field name='name'>Product Arancel Form Inherit</field>
			<field name='model'>product.product</field>
			<field name='inherit_id' ref='account.product_normal_form_view'/>
			<field name='type'>form</field>
			<field name='arch' type='xml'>
				<xpath expr="/form/notebook/page[@string='Accounting']/group[@name='properties']" position="inside">
					
					<!--separator string="Cost Center" colspan="2"/-->
					<field name="arancel_id"/>
				</xpath>
			</field>
		</record>

		<record model="ir.actions.act_window" id="product_arancel_list_action">
			<field name="name">Arancel</field>
			<field name="res_model">product.arancel</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
        <record id="view_product_arancel_tree" model="ir.ui.view">
            <field name="name">Product Arancel List</field>
            <field name="model">product.arancel</field>
            <field name="type">tree</field>
            <field name="field_parent">child_ids</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree string="Arancel List" toolbar="1">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        
        <record id="view_product_arancel_code_form" model="ir.ui.view">
            <field name="name">Product Arancel Form</field>
            <field name="model">product.arancel</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product Arancel">
					<field name="name"/>
					<field name="code"/>
					<field name="parent_id"/>
					<field name="type"/>
                    <separator string="Taxes Mapping" colspan="4"/>
                    <field colspan="4" name="tax_ids" nolabel="1" attrs="{'readonly':[('type','=','view')]}"/>
                </form>
            </field>
        </record>
        		
		<menuitem name='Arancel' id = 'product_arancel_menu' parent='account.next_id_27' sequence='200'	action="product_arancel_list_action"/>
		<menuitem name='Arancel' id = 'product_arancel_menu' parent='product.prod_config_main' sequence='250'	action="product_arancel_list_action"/>
		
	</data>
</openerp>
