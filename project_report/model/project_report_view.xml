<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>
        <report
            id="report_project_report"
            string="Project Status"
            model="project.report"
            report_type="qweb-pdf"
            file="project_report.status"
            name="project_report.status"/>
        <record id="view_reports_base_tree" model="ir.ui.view">
            <field name="name">Timesheet Report</field>
            <field name="model">project.report</field>
            <field name="arch" type="xml">
                <tree string="Invoice Line" version="7.0">
                    <button name="do_report"
                            icon="STOCK_PRINT"
                            string="Print and Send"
                            type="object"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="filter_invoice_id"/>
                    <field name="filter_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_reports_base_search" model="ir.ui.view">
            <field name="name">Timesheet Report Search</field>
            <field name="model">project.report</field>
            <field name="arch" type="xml">
                <search string="Salesteams Search">
                    <field name="name"/>
                    <field name="filter_id"/>
                    <field name="filter_invoice_id"/>
                    <field name="filter_issue_id"/>
                    <field name="filter_hu_id"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <group expand="0" string="Group By...">
                        <filter string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_reports_base_form" model="ir.ui.view">
            <field name="name">Timesheet Report</field>
            <field name="model">project.report</field>
            <field name="arch" type="xml">
                <form string="Invoice Line" version="7.0">
                    <header>
                        <button name="do_report"
                                class="oe_highlight"
                                string="Just Print report"
                                type="object"/>
                        <button name="send_by_email"
                                string="Send Report by Email"
                                type="object"
                                help="Just print report and send a message with the report to followers."/>
                        <button name="mark_timesheet"
                                string="Mark Timesheet as Invoiced"
                                type="object"
                                help="Mark timesheet elements as reported"/>
                        <button name="clean_timesheet"
                                string="Clean Timesheets"
                                type="object"
                                help="All timesheet must have a value for billable time, this button trigger a write on them to ensure that."/>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                        <div class="oe_title oe_left">
                            <h1><field name="name"/></h1>
                            <field name="partner_id"/>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_stat_button"
                                    icon="fa-tasks"
                                    id="timesheet_button"
                                    type="object"
                                    name="go_to_timesheet">

                                <field string="Timesheets" name="sum" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button"
                                    id="invoice_button"
                                    icon="fa-pencil-square-o"
                                    string="Invoices"
                                    type="object"
                                    name="go_to_invoices"/>
                            <button class="oe_stat_button"
                                    id="issue_button"
                                    icon="fa-bug"
                                    string="Issues"
                                    type="object"
                                    name="go_to_issues"/>
                            <button class="oe_stat_button"
                                    string="User Stories"
                                    icon="fa-pencil"
                                    type="object"
                                    name="go_to_hu"/>
                            <button class="oe_stat_button"
                                    string="Invoice Lines"
                                    icon="fa-book"
                                    type="object"
                                    name="go_to_cons_lines"
                                    context="{'ts_report_id': context.get('active_ids')}"/>
                        </div>
                        <group colspan="6">
                            <group>
                                <notebook>
                                    <page string="Timesheet Annotations">
                                        <field name="cts2html" nolabel="1" widget="html"/>
                                    </page>
                                    <page string="Edit Online">
                                        <field name="comment_timesheet" nolabel="1"/>
                                    </page>
                                </notebook>
                                <newline/>
                                <notebook>
                                    <page string="Invoice Annotations">
                                        <field name="ci2html" nolabel="1" widget="html"/>
                                    </page>
                                    <page string="Edit Online">
                                        <field name="comment_invoices" nolabel="1"/>
                                    </page>
                                </notebook>
                                <newline/>
                                <notebook>
                                    <page string="Issues Annotation">
                                        <field name="ciss2html" nolabel="1" widget="html"/>
                                    </page>
                                    <page string="Edit Online">
                                        <field name="comment_issues" nolabel="1"/>
                                    </page>
                                </notebook>
                                <newline/>
                                <notebook>
                                    <page string="User Stories Annotation">
                                        <field name="chu2html" nolabel="1" widget="html"/>
                                    </page>
                                    <page string="Edit Online">
                                        <field name="comment_hu" nolabel="1"/>
                                    </page>
                                </notebook>
                            </group>
                            <group>
                                <group string="Filters">
                                    <field name="filter_id" required="1"/>
                                    <field name="filter_hu_id"/>
                                    <field name="filter_issue_id"/>
                                    <field name="filter_invoice_id"/>
                                </group>
                                <newline/>
                                <group string="Monetary">
                                    <field name="sum_inv"/>
                                    <field name="us_planned"/>
                                    <field name="us_worked"/>
                                    <field name="us_invoiceable"/>
                                    <field name="us_total"/>
                                    <field name="prod_cons_ids" widget="many2many_tags"/>
                                    <field class="oe_inline" name="product_id" domain="[('type','=', 'service')]" groups="base.group_user"/>
                                    <field class="oe_inline" name="currency_id" groups="base.group_user"/>
                                    <field name="user_id" groups="base.group_user"/>
                                    <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                                    <field name="prod_ent_ids" widget="many2many_tags"/>
                                    <field name="prod_train_ids" widget="many2many_tags"/>
                                    <field name="contract_ids" widget="many2many_tags"/>
                                </group>
                                <newline/>
                                <group string="Print Options">
                                    <field name="show_details"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_reports_base_kanban" model="ir.ui.view">
            <field name="name">Timesheet Report Kanban</field>
            <field name="model">project.report</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="contract_ids"/>
                    <field name="sum"/>
                    <field name="color"/>
                    <field name="sum_inv"/>
                    <field name="us_planned"/>
                    <field name="us_worked"/>
                    <field name="us_total"/>
                    <field name="us_progress"/>
                    <field name="issue_total"/>
                    <field name="issue_progress"/>
                    <field name="task_total"/>
                    <field name="task_progress"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click oe_kanban_crm_salesteams">
                                <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_sale_manager">
                                    <span class="oe_e">í</span>
                                    <ul class="oe_dropdown_menu">
                                        <li t-if="widget.view.is_action_enabled('edit')"><a type="edit">Report Settings</a></li>
                                        <li t-if="widget.view.is_action_enabled('delete')"><a type="delete">Delete</a></li>
                                        <li t-if="widget.view.is_action_enabled('edit')"><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <h4 class="oe_partner_heading oe_center">
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <div class="oe_clear"/>
                                    <div class="oe_kanban_partner_categories"/>
                                    <div class="oe_kanban_partner_links"/>
                                    <field name="contract_ids"/>
                                    <div class="oe_clear"/>
                                    <div class="oe_center">
                                        <field name="sum_inv"
                                               widget="gauge"
                                               style="width:110px; height: 100px; cursor: pointer;"
                                               options="{'max_field': 'sum'}">Invoiced</field>
                                        <field name="us_worked"
                                               widget="gauge"
                                               style="width:110px; height: 100px; cursor: pointer;"
                                               options="{'max_field': 'us_planned'}">US Worked</field>
                                        <field name="us_progress"
                                               widget="gauge"
                                               style="width:100px; height: 100px; cursor: pointer;"
                                               options="{'max_field': 'us_total'}">US Progress</field>
                                        <field name="issue_progress"
                                               widget="gauge"
                                               style="width:10px; height: 100px; cursor: pointer;"
                                               options="{'max_field': 'issue_total'}">Issues</field>
                                        <field name="task_progress"
                                               widget="gauge"
                                               style="width:100px; height: 100px; cursor: pointer;"
                                               options="{'max_field': 'task_total'}">Tasks</field>
                                    </div>
                                    <div class="oe_center oe_salesteams_help"
                                         style="color:#bbbbbb;">
                                        <br/>TODO: Proper help
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_report_base_tree">
            <field name="name">Timesheet Report</field>
            <field name="res_model">project.report</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="view_reports_base_search"/>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <menuitem name="Timesheet report"
                  id="menu_hr_report_base"
                  parent="base.menu_project_report"
                  action="action_report_base_tree"
                  sequence='100'/>
    </data>
</openerp>
