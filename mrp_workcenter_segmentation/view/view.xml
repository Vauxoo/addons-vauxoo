<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
        <record id="mrp_workcenter_segmentation_view" model="ir.ui.view">
            <field name="name">mrp.workcenter.segmentation.form</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="calendar_id"]' position='after'>
                    <field name="segmentation_cost" required='1'/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
