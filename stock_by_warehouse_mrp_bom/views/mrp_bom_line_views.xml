<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_line_view_form_inherit" model="ir.ui.view">
        <field name="name">mrp.bom.line.stock.warehouse</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="before">
                <div class="text-center alert alert-info" role="alert">
                    <p>The stock <span attrs="{'invisible':[('warehouse_id','=',False)]}">in: <field name="warehouse_id"/></span> that is immediately available is:
                        <field name="warehouses_stock"
                            widget="warehouse"
                            groups="stock.group_stock_multi_warehouses"
                            options="{'placement': 'bottom'}"/>
                        &amp;nbsp;&amp;nbsp;
                        <field name="warehouses_stock_recompute"
                            nolabel="1"
                            colspan="1"
                            widget="toggle_button"
                            groups="stock.group_stock_multi_warehouses"/>
                    </p>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
