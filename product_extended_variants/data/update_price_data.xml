<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record id="ir_cron_module_update_cost" model="ir.cron">
            <field name="name">Update Product Cost</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().replace(month=datetime.now().month+1, day=1) - timedelta(days=1) -timedelta(days=3)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field eval="False" name="doall" />
            <field eval="'wizard.price'" name="model" />
            <field eval="'execute_cron'" name="function" />
            <field eval="'()'" name="args" />
            <field name="priority">5</field>
        </record>

    </data>
</openerp>
