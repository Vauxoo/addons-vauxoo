<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_website_config_ecommerce_settings" model="ir.ui.view">
            <field name="name">Website E-commerce settings</field>
            <field name="model">website.config.settings</field>
            <field name="inherit_id" ref="website.view_website_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Language']" position="after">
                        <group string="E-commerce">
                            <field name="default_sort"/>
                        </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
