<openerp>
    <data>
        <template id="assets_frontend" name="website_comment_approval_assets" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_rate_product/static/src/js/star_rate.js"></script>
                <script type="text/javascript" src="/website_rate_product/static/src/js/set_current_rating.js"></script>
                <script type="text/javascript" src="/website_rate_product/static/src/js/test_comments.js"></script>
            </xpath>
        </template>

        <template id="assets_backend_approval" name="web_comment_approval_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_rate_product/static/src/js/mail_rate.js"></script>
            </xpath>
        </template>
        <template id="assets_frontend_rating_less" name="Product rating frontend assets" inherit_id="website.theme">
            <xpath expr='//link[@href="/website/static/src/css/website.css"]' position="after">
                <link href="/website_rate_product/static/src/less/stars.less" rel="stylesheet" type="text/less"/>
            </xpath>
        </template>
    </data>
</openerp>
