                    <field name="invoice_qty"/>
                    <field name="aml_cost_qty"/>
                    <field name="invoice_price_unit"/>
                    <field name="aml_cost_price_unit"/>
                    <field name="subtotal"/>
                    <field name="total"/>
                    <field name="state"/>
                    <field name="aml_cost_id"/>
                    <field name="invoice_line_id"/>
                    <field name="invoice_id"/>
