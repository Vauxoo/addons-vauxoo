<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>
        <record id="default_stok_requisition_view_stock_config_settings" model="ir.ui.view">
            <field name="name">stock default purchase requisition</field>
            <field name="model">stock.config.settings</field>
            <field name="inherit_id" ref="stock.view_stock_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//div/field[@name='decimal_precision']/.." position="after">
                    <div>
                        <field name="default_purchase_requisition" class="oe_inline"/>
                        <label for="default_purchase_requisition"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="default_purchase_requisition_view_purchase_configuration" model="ir.ui.view">
            <field name="name">purchase default purchase requisition</field>
            <field name="model">purchase.config.settings</field>
            <field name="inherit_id" ref="purchase.view_purchase_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//div/field[@name='module_purchase_double_validation']/.." position="after">
                    <div>
                        <field name="default_purchase_requisition" class="oe_inline"/>
                        <label for="default_purchase_requisition"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

