<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="view_order_form_show_availability" model="ir.ui.view">
        <field name="name">sale.order.form.show.availability</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//label[@for='name']" position="replace"/>
            <xpath expr="//field[@name='order_line']/form//field[@name='name']" position="replace">
                <group>
                    <div>
                        <label for="name" style="font-weight:bold"/>
                        <field name="name" style="line-height:30px;"/>
                    </div>
                    <group>
                        <notebook>
                            <page string="Forecast">
                                <field name="forecast_ids">
                                    <tree create="false" edit="false" delete="false">
                                        <field name="warehouse_id"/>
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="On hand">
                                <field name="on_hand_ids">
                                    <tree create="false" edit="false" delete="false">
                                        <field name="warehouse_id"/>
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Incoming">
                                <field name="incoming_ids">
                                    <tree create="false" edit="false" delete="false">
                                        <field name="warehouse_id"/>
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Outgoing">
                                <field name="outgoing_ids">
                                    <tree create="false" edit="false" delete="false">
                                        <field name="warehouse_id"/>
                                        <field name="qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    </data>
</openerp>
