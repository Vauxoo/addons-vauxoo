<?xml version="1.0" ?>
<openerp>
    <data noupdate="1">
        
        <!--Outgoing mail server-->
        <record model="ir.mail_server" id="outgoing_mail_server1">
            <field name="name">Suport</field>
            <field name="smtp_host">smtp.gmail.com</field>
            <field name="smtp_port">25</field>
            <field name="smtp_encryption">starttls</field>
        </record>
        
        <!--Callback mail server-->
        <record model="fetchmail.server" id="callback_mail_server1">
            <field name="name">Issues - Reception of Issues</field>
            <field name="type">imap</field>
            <field name="server">imap.googlemail.com</field>
            <field name="port">993</field>
            <field name="is_ssl">1</field>
        </record>
        
    </data>
</openerp>
