<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_transfer_detail_location" model="ir.ui.view">
            <field name="name">stock.transfer.detail.location</field>
            <field name="model">stock.transfer_details</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_destination_location_id']" position="after">
                    <group col='1'>
                        <group col='1' colspan='1'>
                            <field name="change_location" nolabel='1'/>
                        </group>
                        <group col='4' colspan='6'>
                            <field name="dest_location_id"
                                   domain="[('usage', '=', 'internal')]"
                                   attrs="{'readonly':[('change_location', '=', False)]}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</openerp>
