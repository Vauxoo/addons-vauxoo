<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- purchase order line form -->
        <record id="product_category_form_properties" model="ir.ui.view">
            <field name="name">Product category form properties</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                        <group name="product_property" string="Product Properties">
                            <field name="purchase_requisition" string="Call for Bids"/>
                        </group>
                    </xpath>
            </field>
        </record>
    </data>
</openerp>
