<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!--
mrp.scheduled.workorders
-->

        <record id="mrp_scheduled_workorders_form" model="ir.ui.view">
            <field name="name">mrp.scheduled.workorders.form</field>
            <field name="model">mrp.scheduled.workorders</field>
            <field name="arch" type="xml">
                <form string="Scheduled Work Order" version="7.0">
                    <group>
                        <field name="name"/>
                        <field name="workcenter_id"/>
                        <field name="sequence"/>
                        <field name="cycle"/>
                        <field name="hour"/>
                        <field name="wo_lot_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="mrp_scheduled_workorders_tree" model="ir.ui.view">
            <field name="name">mrp.scheduled.workorders.tree</field>
            <field name="model">mrp.scheduled.workorders</field>
            <field name="arch" type="xml">
                <tree string="Scheduled Work Orders" version="7.0">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="workcenter_id"/>
                    <field name="cycle"/>
                    <field name="hour"/>
                    <field name="wo_lot_id"/>
                </tree>
            </field>
        </record>

<!--
mrp.production inherit
-->

        <record id="mrp_byworcenter_production_form" model="ir.ui.view">
            <field name="name">mrp.byworcenter.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='workcenter_lines']" position="before">
                    <separator string="Scheluded Orders Lots"/>
                    <field name="wo_lot_ids">
                        <tree>
                            <field name="number"/>
                            <field name="name"/>
                            <field name="swo_ids"/>
                            <field name="percentage"/>
                        </tree>
                    </field>

                    <separator string="Scheluded Orders"/>
                    <field name="swo_ids"/>
                    <separator string="Real Orders"/>
                </xpath>

                <xpath expr="//button[@name='action_compute']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

<!--
mrp.workcenter.product.capacity
-->

        <record id="mrp_workcenter_product_capacity_tree" model="ir.ui.view">
            <field name="name">mrp.workcenter.product.capacity.tree</field>
            <field name="model">mrp.workcenter.product.capacity</field>
            <field name="arch" type="xml">
                <tree string="Workcenter Product Capacities" version="7.0">
                    <field name="workcenter_id"/> 
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>

        <record id="mrp_workcenter_product_capacity_search" model="ir.ui.view">
            <field name="name">mrp.workcenter.product.capacity.search</field>
            <field name="model">mrp.workcenter.product.capacity</field>
            <field name="arch" type="xml">
                <search string="Workcenter Product Capacities">
                    <field name="workcenter_id"/> 
                    <field name="product_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Work Center" icon="terp-blue-folder" name="group_report" context="{'group_by':'workcenter_id'}"/>
                        <filter string="Product" icon="terp-blue-folder" name="group_report" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="mrp_workcenter_product_capacity_action" model="ir.actions.act_window">
            <field name="name">Product Capacity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.workcenter.product.capacity</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="mrp_workcenter_product_capacity_tree"/>
            <field name="search_view_id" ref="mrp_workcenter_product_capacity_search"/>
        </record>

        <menuitem
            id="menu_mrp_workcenter_capacity"
            parent="mrp.menu_mrp_configuration"
            name="Product Capacity"
            sequence="40"
            action="mrp_workcenter_product_capacity_action"
        />

<!--
mrp.workcenter inherit 
-->

        <record id="mrp_byworcenter_workcenter_form" model="ir.ui.view">
            <field name="name">mrp.byworcenter.workcenter.form</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@string='General Information']/group" position="after">
                    <group name="workcenter_products" string="Products Information">
                        <field name="product_capacity_ids" colspan="4">
                            <tree string="Workcenter Product Capacities" editable="bottom" version="7.0">
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="uom_id"/>
                            </tree>
                        </field>
                    </group>
                </xpath>

            </field>
        </record>

<!--
mrp.routing.workcenter inherits
-->

        <record id="mrp_routing_workcenter_tree_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.tree</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='workcenter_id']" position="after">
                    <field name="product_ids"/>
                </xpath>

            </field>
        </record>

        <record id="mrp_routing_workcenter_form_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//group" position="after">
                    <group string="Products Needed">
                        <field name="product_ids" nolabel="1">
                            <tree string="Operation Product Quantities" editable="bottom" version="7.0">
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="uom_id"/>
                            </tree>
                        </field>
                    </group>
                </xpath>

            </field>
        </record>


<!--
mrp.workoder.lot
-->

        <record id="mrp_workoder_lot_tree" model="ir.ui.view">
            <field name="name">mrp.workoder.lot.tree</field>
            <field name="model">mrp.workoder.lot</field>
            <field name="arch" type="xml">
                <tree string="Scheduled Work Order Lots" version="7.0">
                    <field name="number"/>
                    <field name="name"/>
                    <field name="production_id"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>

        <record id="mrp_workoder_lot_form" model="ir.ui.view">
            <field name="name">mrp.workoder.lot.form</field>
            <field name="model">mrp.workoder.lot</field>
            <field name="arch" type="xml">
                <form string="Scheduled Work Order Lot" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Lot Name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group colspan="4" col="4">
                                <field name="number"/>
                                <field name="production_id"/>
                                <field name="percentage"/>
                            </group>
                            <group>
                                <separator string="Scheduled Work Orders" colpan="4"/>
                                <field name="swo_ids" colspan="4" nolabel="1">
                                    <tree>
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="workcenter_id"/>
                                        <field name="cycle"/>
                                        <field name="hour"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
