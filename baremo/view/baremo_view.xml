<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>

    <menuitem id="commission" name="Commission Settings" parent="base.menu_base_config" groups="baremo.group_baremo_manager" sequence="10"/>

    <record model="ir.ui.view" id="view_baremo_book_form">
        <field name="name">baremo.book.form</field>
        <field name="model">baremo.book</field>
        <field name="arch" type="xml">
            <form string="Baremos" version="7.0">
                <sheet>
                    <div class="oe_title oe_left" style="width: 100%;">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1 style="width: 100%;">
                            <field
                                name="name"
                                default_focus="1"
                                placeholder="3% Commission at 30 days w/o Disc." />
                        </h1>
                    </div>
                    <group>
                        <field name="bar_ids" nolabel="1" colspan="6"/>
                    </group>
                    <group string='Bareme Matrix'>
                        <label string='For these Partners &amp; Products this Bareme will be used'/>
                        <newline/>
                        <label string='On Commission Payment this Bareme can be used with other options'/>
                        <field
                            name="matrix_ids"
                            nolabel="1"
                            colspan="6">
                            <tree editable='top'>
                                <field name="user_id"/>
                                <field name="product_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_baremo_book_tree">
        <field name="name">baremo.book.tree</field>
        <field name="model">baremo.book</field>
        <field name="arch" type="xml">
            <tree string="Baremes">
                <field name="name"/>
            </tree>
        </field>
    </record>

        <record model="ir.actions.act_window" id="commision_baremo_act">
            <field name="name">Baremes</field>
            <field name="res_model">baremo.book</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
        </record>
        <record model="ir.actions.act_window.view" id="action_baremo_book_tree">
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_baremo_book_tree"/>
            <field name="act_window_id" ref="commision_baremo_act"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_baremo_book_form">
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_baremo_book_form"/>
            <field name="act_window_id" ref="commision_baremo_act"/>
        </record>


    <menuitem name="Baremes" parent="commission" id="menu_baremes_tree" action="commision_baremo_act" groups="baremo.group_baremo_manager"/>


    <record model="ir.ui.view" id="view_baremo_form">
        <field name="name">baremo.form</field>
        <field name="model">baremo</field>
        <field name="arch" type="xml">
            <form string="Commission Days &amp; Discounts" version="7.0">
                <sheet>
                    <div class="oe_title oe_left" name="left">
                        <div>
                            <label for="name"/>
                        </div>
                        <h1>
                            <field
                                name="name"
                                default_focus="1"
                                placeholder="Up to 30 days"
                                />
                        </h1>
                    </div>
                    <div class="oe_right oe_button_box" style="width: 20%;" name="right">
                        <div>
                            <label for="number"/>
                        </div>
                        <h1>
                            <field
                                name="number"
                                placeholder="30"
                                />
                        </h1>
                    </div>
                    <group>
                        <field name="disc_ids" nolabel="1" colspan="6">
                            <tree string="Commission by Discount" editable='top'>
                                <field name="porc_disc"/>
                                <field name="porc_com"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_baremo_tree">
        <field name="name">baremo.tree</field>
        <field name="model">baremo</field>
        <field name="arch" type="xml">
            <tree string="Commission Days &amp; Discounts">
                <field name="name"/>
                <field name="number"/>
                <field name="disc_ids"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_baremo_discount_form">
        <field name="name">baremo.discount.tree</field>
        <field name="model">baremo.discount</field>
        <field name="arch" type="xml">
            <form string="Commission by Discount" version="7.0">
                <group col="6">
                    <field name="porc_disc"/>
                    <field name="porc_com"/>
                </group>
            </form>
        </field>
    </record>

    <record id="res_partner_view_baremo" model="ir.ui.view">
        <field name="name">res.partner.view.baremo</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="baremo_id"/>
            </xpath>
            <xpath expr="//page[@string='Contacts']//form[@string='Contact']/sheet/field[@name='customer']" position="after">
                <div class="oe_left" style="width: 100%;">
                    <div>
                        <label for="baremo_id"/>
                    </div>
                    <h3 style="width: 100%;">
                        <field
                            name="baremo_id"
                            widget="selection"
                            />
                    </h3>
                    <div>
                        <label for="user_id"/>
                    </div>
                    <h3 style="width: 100%;">
                        <field
                            name="user_id"
                            widget="selection"
                            />
                    </h3>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_users_view_baremo" model="ir.ui.view">
        <field name="name">res.users.view.baremo</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='messaging']" position="after">
                <group string="Baremo" name="baremo" colspan='4'>
                    <group colspan='4'>
                        <label string='Bareme to be used when selected Bareme from Salesman on Commission Payment'/>
                    </group>
                    <newline/>
                    <field name="baremo_id"/>
                    <group colspan='4'>
                        <label string='On this Salesman these Baremes will be used when these products are present on Invoices and option Matrix Bareme on Commission Payment is selected'/>
                    </group>
                    <field
                        name="matrix_ids"
                        nolabel="1"
                        colspan="6">
                        <tree editable='top'>
                            <field name="baremo_id"/>
                            <field name="product_id"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

        <record id="res_company_view_baremo" model="ir.ui.view">
            <field name="name">res.company.view.baremo</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_grp']" position="after">
                    <group name="baremo_grp" string="Baremo">
                        <field name="baremo_id"/>
                    </group>
                </xpath>
            </field>
        </record>

    <record model="ir.ui.view" id="view_baremo_matrix_tree">
        <field name="name">baremo.matrix.tree</field>
        <field name="model">baremo.matrix</field>
        <field name="arch" type="xml">
            <tree string="Bareme Matrix">
                <field name="baremo_id"/>
                <field name="user_id"/>
                <field name="product_id"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_baremo_matrix_form">
        <field name="name">baremo.matrix.form</field>
        <field name="model">baremo.matrix</field>
        <field name="arch" type="xml">
            <form string="Bareme Matrix" version="7.0">
                <sheet>
                    <div class="oe_title oe_left" style="width: 100%;">
                        <div class="oe_edit_only">
                            <label for="baremo_id"/>
                        </div>
                        <h1 style="width: 100%;">
                            <field
                                name="baremo_id"
                                default_focus="1"
                                placeholder="Select a Baremo"
                                />
                        </h1>
                    </div>
                    <group>
                        <field name="user_id"/>
                        <field name="product_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="commission_baremo_matrix_act">
        <field name="name">Bareme Matrix</field>
        <field name="res_model">baremo.matrix</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window.view" id="action_baremo_matrix_tree">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_baremo_matrix_tree"/>
        <field name="act_window_id" ref="commission_baremo_matrix_act"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_baremo_matrix_form">
        <field name="sequence" eval="10"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_baremo_matrix_form"/>
        <field name="act_window_id" ref="commission_baremo_matrix_act"/>
    </record>

    <menuitem
        name="Bareme Matrix"
        parent="commission"
        id="menu_bareme_matrix_tree"
        action="commission_baremo_matrix_act"
        groups="baremo.group_baremo_manager"
        />


    <record model="ir.ui.view" id="view_product_baremo_tree">
        <field name="name">product.product.baremo.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_condition']" position="after">
                <group string="Baremo" name="baremo" colspan='4'>
                    <label string='On this Product these Baremes will be used when Commission Payment on these Salesmen are computed on Invoiced Products and option Matrix Bareme is selected'/>
                    <field
                        name="matrix_ids"
                        nolabel="1"
                        colspan="6">
                        <tree editable='top'>
                            <field name="baremo_id"/>
                            <field name="user_id"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
    </data>
</openerp>
