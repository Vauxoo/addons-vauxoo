<?xml version="1.0"?>
<openerp>
    <data>
        <record id="product_extend_form_view" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="after">
                    <button name="%(product_extended.action_view_compute_price_wizard)d" string="Recompute price from BoM (Segmentation)"
                            type="action" attrs="{'invisible': [('cost_method', '!=', 'standard')]}"
                             groups="stock_account.group_inventory_valuation"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
