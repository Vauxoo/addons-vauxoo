<odoo>
    <record id="quote_view_form" model="ir.ui.view">
        <field name="name">quote.view.form</field>
        <field name="model">quote</field>
        <field name="arch" type="xml">
            <form string="Quote">
                <sheet>
                    <group>
                        <field name="quote"/>
                        <field name="background"/>
                        <field name="author"/>
                        <field name="last_date_shown"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="quote_view_tree" model="ir.ui.view">
        <field name="name">quote.view.tree</field>
        <field name="model">quote</field>
        <field name="arch" type="xml">
            <tree>
                <field name="quote"/>
                <field name="author"/>
                <field name="last_date_shown"/>
            </tree>
        </field>
    </record>
    <record id="quotes_action" model="ir.actions.act_window">
        <field name="name">Quotes</field>
        <field name="res_model">quote</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <b>Set your very first quote</b>
        </field>
    </record>
    <menuitem id="quote_main" name="Quotes" sequence="1000" web_icon="web_quote_of_the_day,static/description/icon.png"/>
    <menuitem id="quote_menu" name="Quotes" sequence="1000" parent="quote_main" action="web_quote_of_the_day.quotes_action"/>
</odoo>
