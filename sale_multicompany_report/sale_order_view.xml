<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_sale_order_form_inherit">
            <field name="name">sale.order.form.report</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_packaging']" position="after">
                    <field name="sequence"/>
                    <field name="att_bro"/>
                </xpath>
                <xpath expr="//field[@name='amount_total']" position="after">
                        <button colspan="1" name="%(sale_multicompany_report)d" string="Print With Attachments" type="action" icon="terp-document-new"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_sale_order_tree_inherit">
            <field name="name">sale.order.tree.report</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom']" position="after">
                    <field name="att_bro"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
