<?xml version="1.0"?>
<openerp>
    <data noupdate="1">
        <record model="ir.sequence.type" id="seq_type_payment_term">
            <field name="name">Payment Term code</field>
            <field name="code">account.payment.term</field>
        </record>
        <record model="ir.sequence" id="seq_payment_term">
            <field name="name">Payment Term code</field>
            <field name="code">account.payment.term</field>
            <field name="prefix">PT/</field>
            <field name="padding">0</field>
        </record>
    </data>
    <data>
        <record model="ir.ui.view" id="view_account_payment_term_sequence">
            <field name="name">view.account.payment.term.sequence</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <newline/>
                    <field name="sequence"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
