<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_company_inherit_payment_terms">
            <field name="name">res.company.form.inherit.payment.terms</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_grp']" position="after">
                    <group name="payment_grp" string="Payment Terms">
                        <field name="payment_terms_ids" widget="many2many_tags"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
